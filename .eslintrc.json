{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "no-console": 0,
    "no-undef": 0,
    "space-before-function-paren": 0,
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    // we want to avoid useless spaces
    "no-multi-spaces": [
      "error"
    ]
  }
}